<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @record.event %>
      </p>
        <% @menus.each do |menu| %>
          <p>
            重量：<%= menu.weight %>　回数：<%= menu.rep %>
          </p>
        <% end %>
      <div class="post-time">
        <%= @record.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/records/#{@record.id}/edit") %>
        <%= link_to("削除", "/records/#{@record.id}/destroy", {method: "delete"}) %>
      </div>
    </div>
  </div>
</div>
